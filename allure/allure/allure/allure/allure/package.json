{
  "name": "shoptodo-e2e-practice",
  "version": "1.0.0",
  "description": "E2E test practice web application with unit testing",
  "main": "app.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "serve": "python3 -m http.server 8000"
  },
  "keywords": [
    "e2e-testing",
    "unit-testing",
    "javascript",
    "web-application",
    "shopping-cart",
    "todo-list"
  ],
  "author": "Claude Code",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "allure-commandline": "^2.36.0",
    "allure-jest": "^3.4.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "allure-jest/jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "app.js",
      "!node_modules/**"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
