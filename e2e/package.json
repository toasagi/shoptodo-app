{
  "name": "shoptodo-login-e2e-tests",
  "version": "1.0.0",
  "description": "Simple E2E login tests using Cucumber BDD and Playwright",
  "main": "index.js",
  "scripts": {
    "test": "cucumber-js --require-module ts-node/register --require 'step-definitions/**/*.ts' --require 'support/**/*.ts' --format allure-cucumberjs/reporter --format-options '{\"resultsDir\":\"./allure-results\"}'",
    "test:smoke": "cucumber-js --require-module ts-node/register --require 'step-definitions/**/*.ts' --require 'support/**/*.ts' --tags '@smoke' --format allure-cucumberjs/reporter --format-options '{\"resultsDir\":\"./allure-results\"}'",
    "test:negative": "cucumber-js --require-module ts-node/register --require 'step-definitions/**/*.ts' --require 'support/**/*.ts' --tags '@negative' --format allure-cucumberjs/reporter --format-options '{\"resultsDir\":\"./allure-results\"}'",
    "test:checkout": "cucumber-js --require-module ts-node/register --require 'step-definitions/**/*.ts' --require 'support/**/*.ts' --tags '@checkout' --format allure-cucumberjs/reporter --format-options '{\"resultsDir\":\"./allure-results\"}'",
    "test:order-history": "cucumber-js --require-module ts-node/register --require 'step-definitions/**/*.ts' --require 'support/**/*.ts' --tags '@order-history' --format allure-cucumberjs/reporter --format-options '{\"resultsDir\":\"./allure-results\"}'",
    "test:debug": "cucumber-js --require-module ts-node/register --require 'step-definitions/**/*.ts' --require 'support/**/*.ts' --tags '@debug' --format allure-cucumberjs/reporter --format-options '{\"resultsDir\":\"./allure-results\"}'",
    "test:e2e": "cucumber-js --require-module ts-node/register --require 'step-definitions/**/*.ts' --require 'support/**/*.ts' --format allure-cucumberjs/reporter --format-options '{\"resultsDir\":\"./allure-results\"}'",
    "test:e2e:smoke": "cucumber-js --require-module ts-node/register --require 'step-definitions/**/*.ts' --require 'support/**/*.ts' --tags '@smoke' --format allure-cucumberjs/reporter --format-options '{\"resultsDir\":\"./allure-results\"}'",
    "test:e2e:regression": "cucumber-js --require-module ts-node/register --require 'step-definitions/**/*.ts' --require 'support/**/*.ts' --tags '@regression' --format allure-cucumberjs/reporter --format-options '{\"resultsDir\":\"./allure-results\"}'",
    "test:e2e:parallel": "cucumber-js --require-module ts-node/register --require 'step-definitions/**/*.ts' --require 'support/**/*.ts' --parallel 2 --format allure-cucumberjs/reporter --format-options '{\"resultsDir\":\"./allure-results\"}'",
    "test:e2e:report": "echo 'Test report generation - implement if needed'",
    "test:a11y": "cucumber-js --require-module ts-node/register --require 'step-definitions/**/*.ts' --require 'support/**/*.ts' --tags '@a11y' --format allure-cucumberjs/reporter --format-options '{\"resultsDir\":\"./allure-results\"}'",
    "install:browsers": "npx playwright install"
  },
  "keywords": [
    "e2e-testing",
    "cucumber",
    "playwright",
    "bdd",
    "login-tests"
  ],
  "author": "Claude Code",
  "license": "MIT",
  "devDependencies": {
    "@axe-core/playwright": "^4.8.0",
    "@cucumber/cucumber": "^10.0.1",
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.8.0",
    "allure-cucumberjs": "^3.4.3",
    "ts-node": "^10.9.0",
    "typescript": "^5.2.0"
  },
  "dependencies": {
    "playwright": "^1.40.0"
  }
}
