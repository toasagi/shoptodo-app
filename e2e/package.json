{
  "name": "shoptodo-e2e-tests",
  "version": "1.0.0",
  "description": "E2E test automation for ShopTodo application using Playwright and Cucumber",
  "main": "index.js",
  "scripts": {
    "test:e2e": "cucumber-js --require-module ts-node/register --require './step-definitions/**/*.ts' --format @cucumber/pretty-formatter",
    "test:e2e:parallel": "cucumber-js --require-module ts-node/register --require './step-definitions/**/*.ts' --parallel 4",
    "test:e2e:smoke": "cucumber-js --require-module ts-node/register --require './step-definitions/**/*.ts' --tags '@smoke'",
    "test:e2e:regression": "cucumber-js --require-module ts-node/register --require './step-definitions/**/*.ts' --tags '@regression'",
    "test:e2e:report": "cucumber-js --require-module ts-node/register --require './step-definitions/**/*.ts' --format json:reports/cucumber-report.json",
    "test:install": "npx playwright install",
    "test:debug": "cucumber-js --require-module ts-node/register --require './step-definitions/**/*.ts' --tags '@debug'"
  },
  "keywords": [
    "e2e-testing",
    "playwright",
    "cucumber",
    "bdd",
    "gherkin",
    "page-object-model"
  ],
  "author": "Claude Code",
  "license": "MIT",
  "devDependencies": {
    "@cucumber/cucumber": "^10.0.1",
    "@cucumber/pretty-formatter": "^1.0.1",
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.8.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.2.0",
    "cucumber-html-reporter": "^7.1.1"
  },
  "dependencies": {
    "playwright": "^1.40.0"
  }
}